<h4>Poll Results</h4>

<table id="poll_id" >
	<thead>
	  <tr>
			<th width="10%">Title</th>
			<th width="15%">Option 1</th>
			<th width="10%">Option 2</th>
			<th width="15%">Option 3</th>
			<th width="15%">Option 4</th>
			
	  </tr>
	</thead>

	<tbody>
	  <% @polls.each do |poll| %>
	     
	     <td><%=poll.title rescue nil %></td>
	     <% poll.options.each do |option| %>
		  <td><%=option.answer rescue nil %>
		     <%@result = Result.where('option_id = ?',option.id).count%>
		     :&nbsp;<%= @result%>&nbsp;vote 
	     <% end %></td>
	  <% end %>
	</tbody>	
</table>