<h1>Agents</h1>

<table id="agents" >
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Preffered Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @agents.each do |agent| %>
      <tr>
        <td><%= agent.first_name %></td>
        <td><%= agent.last_name %></td>
        <td><%= agent.preferred_alias %></td>
        <td><%= agent.email %></td>
        <td><%= link_to 'Edit', edit_admin_agent_path(agent) if can? :edit, User%>
        <%= link_to 'Destroy', admin_agent_path(agent), method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, User%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Agents', new_admin_agent_path, class: "btn btn-primary" if can? :create, User%>
