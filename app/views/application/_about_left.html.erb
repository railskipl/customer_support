<div class="sectionLeft">
  <ul class="sectionLeftTop">
    <li>
      <h3><a href="#" class="ribbon">About Us</a></h3>
    </li>
		<% @pages.each do |page| %>
	    <li>
  		  <%= link_to page.title.titlecase, page_url(page.slug) ,:class=>(@sub_action == page.slug ? "active":'')%>
  		</li>
    <%end%>
  </ul>

 <%unless @performance.blank?%>
      <%unless @performance.performance_img.blank?%>
  
        <div class="sectionLeftBot">
       <%= link_to (image_tag @performance.performance_img),@performance.worst_performance  rescue nil%>
      </div>
      <%end%>
      <%unless @performance.best_performance.blank?%>
      <div class="sectionLeftBot">
       
       <%= image_tag @performance.best_performance rescue nil%>
      </div>
    <%end%>
    
  <%else%>
    <div class="sectionLeftBot">
    Some stats e.g worst performing companies and best performing or quotes (flash or updated every week)
  </div>
  <%end%>
</div>
