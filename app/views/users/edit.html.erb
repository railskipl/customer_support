                <div class="text-box3">Country *</div>
                <%=country_select("user", "country",{ "Kenya" => "Kenya"},{},:class => "field3 select_box_custom" )%>
            </div>
            <div class="login-field-box3 row-right">
                <div class="text-box3">I Live In *</div>
                <%= select_tag("user[lives_in]", grouped_options_for_select(@city_group, selected_key = @user.lives_in, prompt = nil), :id=> 'user_i_live' ,:onchange => 'CheckOther();',:prompt => "Select Location",:class => "field3 select_box_custom") %>
            </div>
        </div>
        <div class="clear"></div>
        <div class="row-profile">
