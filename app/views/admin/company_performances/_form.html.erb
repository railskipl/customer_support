<%= form_for([:admin,@company_performance]) do |f| %>
  <% if @company_performance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company_performance.errors.count, "error") %> prohibited this company_performance from being saved:</h2>
      <ul>
      <% @company_performance.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <strong>Image or Quotes:</strong><br>
    <%= f.file_field :performance_img %>
