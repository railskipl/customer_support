            </div> 
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
              <div class="text-box3">Answer *</div>
              <%= f.text_field :answer, required: true, "maxlength"=>"50", "min" => "1","max" => "50",:class => "field3" %>
            </div>  
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="check-one">
