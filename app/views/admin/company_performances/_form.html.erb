      <strong>Image:</strong><br>
      <%= image_tag @company_performance.performance_img %>
    </div><br>
  <%end%>
  <div class="field">
    <strong>Enter Text:</strong>
    <%= f.text_area :best_performance,:class => 'ckeditor' %>
  </div><br>

  <div class="field">
    <strong>Start Date:</strong><br>
    <%= f.date_select :start_date  %>
  </div><br>

  <div class="field">
    <strong>End Date:</strong><br>
    <%= f.date_select :end_date  %>
  </div>

  <div class="actions">
     <%= f.submit class: "btn btn-primary"%><br>
  </div>
 <%end%>
