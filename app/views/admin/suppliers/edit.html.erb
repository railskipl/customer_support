<%= form_for :supplier, url: admin_supplier_path(@supplier.id), html: {method: :PUT} do |f| %>
<%#= form_for([:admin,@supplier]) do |f| %>
  <% if @supplier.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@supplier.errors.count, "error") %> prohibited this supplier from being saved:</h2>

      <ul>
      <% @supplier.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :supplier_name %>
    <%= f.text_field :supplier_name ,required: true%>
  </div>
  <div class="field">
    <%= f.label :supplier_vat_Number %>
    <%= f.text_field :supplier_vat_Number ,required: true%>
  </div>
  <div class="field">
    <%= f.label :industry %>
    <%= f.text_field :industry ,required: true%>
  </div>
  <div class="field">
    <%= f.label :address_line1 %>
    <%= f.text_area :address_line1 %>
  </div>
  <div class="field">
    <%= f.label :address_line2 %>
    <%= f.text_area :address_line2 ,required: true%>
  </div>
  <div class="field">
    <%= f.label :town %>
    <%= f.text_field :town ,required: true%>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city ,required: true%>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country ,required: true%>
  </div>
  <div class="field">
    <%= f.label :authorised_responder %>
    <%= f.select :authorised_responder, [ 'Billing', 'Main Manager', 'CS Authorised Responder'] %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title ,required: true%>
  </div>
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name ,required: true%>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name ,required: true%>
  </div>
  <br/>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number ,required: true%>
  </div>
  <div class="field">
    <%= f.label :mobile_number %>
    <%= f.text_field :mobile_number ,required: true, :pattern => '[0-9]{10,10}'%>
  </div>
	<%if current_user.is_admin?%>
  <div class="field">
    <%= f.label :subscription %>
    <%= f.select :subscription, [ 'Registered', 'Not Registered', 'Trial'] %>
  </div>
  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_select :start_date ,required: true%>
  </div>
  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_select :end_date ,required: true%>
  </div>
	<%end%>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
