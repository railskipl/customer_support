<h1>Industries</h1>

<table id="industries" >
  <thead>
    <tr>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @industries.each do |industry| %>
      <tr>
        <td><%= industry.title %></td>
        <td><%= link_to 'Edit', edit_admin_industry_path(industry)  if can? :edit, Industry%>
        <%= link_to 'Destroy', [:admin,industry], method: :delete, data: { confirm: 'Are you sure?' }  if can? :destroy, Industry%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Industry', new_admin_industry_path, class: "btn btn-primary"  if can? :create, Industry%>
