<h1>Addresses</h1>

<table id="addresses" >
  <thead>
    <tr>
      <th>Company</th>
      <th>Town</th>
      <th>Location</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.company.title %></td>
        <td><%= address.town.try(:title) %></td>
        <td><%= address.try(:location).try(:title) %></td>

        <td><%= link_to 'Edit', edit_admin_address_path(address) if can? :edit, Address%>
        <%= link_to 'Destroy', [:admin,address], method: :delete, data: { confirm: 'Are you sure?' } if can? :destory, Address%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_admin_address_path, class: "btn btn-primary" if can? :create, Address%>
