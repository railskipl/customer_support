<%content_for :left do%>
	<span class="span1">
	</span>
<%end%>

<span class="span6">
	<div class="registerSectionForm">
		<h2>Change your password</h2>

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>

			<%= devise_error_messages! %>
				<div class="fom_con">
				  <div class="form_lft">
				    <div class="name_lft"><%= f.label :password, "New password" %></div>
				    <div>
							<%= f.password_field :password, :autofocus => true  ,:required => true%>
				    </div>
				  </div>
				</div>
				<div class="fom_con">
				  <div class="form_lft">
				    <div class="name_lft"><%= f.label :password_confirmation, "Confirm new password" %></div>
				    <div>
						<%= f.password_field :password_confirmation  ,:required => true%></div>
				    </div>
				  </div>
			 </div>

			<%= f.hidden_field :reset_password_token %>
			<div class="rgh_in">
				<%= f.submit "Reset Password" %>
			</div>

		<% end %>
	</div>
</span>
