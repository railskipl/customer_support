<table>
	<tr>
		<th>Sr. No.</th>
		<th>Date</th>
		<th>Ticket Number</th>
		<th>Comment</th>
		<th>Customer Name</th>
		<th>Customer Email</th>
		<th>Company Name</th>
	</tr>
	<% @comments.each.with_index(1) do |comment,index| %>
	<tr>
		<td><%= index %></td>
		<td><%= comment.created_at.strftime("%d/%m/%Y") %></td>
		<td><%= comment.review.ticket_number %></td>
		<td><%= comment.title.html_safe %></td>
		<td><%= comment.name %></td>
		<td><%= comment.email %></td>
		<td><%= comment.review.company.title %></td>
	</tr>
	<% end %>
	
</table>