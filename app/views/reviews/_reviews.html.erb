<div class="date_outer">
  <div class="date_inner">
    <div class="box_1">Date</div>
    <div class="box_2">Review</div>
    <div class="box_3">Company</div>
    <div class="box_4">Title</div>
  </div>
	<%@reviews.each do |review|%>
    <div class="date_section">
      <div class="box_1_in"><%=review.date.strftime("%d %b")%></div>
      <div class="box_2_in">
       	<span class="<%=review.review_type == 'compliment' ? 'green' : 'red'%>"></span>
      </div>
      <div class="box_3_in"><%= link_to review.try(:company).try(:title),search_reviews_path(company_id: review.company_id)%></div>
      <div class="box_4_in"><%=link_to review.title, review_path(review)%></div>
      <div class="box_5_in">
        <%if review.comments.published.count > 0 and review.comments.published.last.user.present? and ['admin','agent'].include? review.comments.published.last.user.role %>
          <%=link_to image_tag("supplier-response.png", :size=>"25x25"), review_path(review)%>
        <%else%>
          <%=link_to image_tag("comment.png"), review_path(review)%>
				<%end%>
        <%=review.comments.published.count%>
        <%if review.comments.published.count > 0 and review.comments.published.last.user.present? and ['admin','agent'].include? review.comments.published.last.user.role %>
          <p style="font-size: 11px;">Supplier's response</p> 
        <%end%></div>
    </div>
 	<%end%>
</div>
