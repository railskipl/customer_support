<%= div_for comment do %>
		      <div class="row1">
				 <div class="commentsr">
				<%if comment.user_id  && ['agent', 'admin','jagent'].include?(comment.user.role) %>
 				<p class="names"><img src="/assets/fill.png" alt=""><%= comment.supplier.supplier_name%></p>
				<%elsif comment.user_id && comment.user_id == @review.user_id %>
				 <p class="names"><img src="/assets/blank.png" alt=""><%= comment.name%></p>
				<%else%>
				 <p class="names"><img src="/assets/blank.png" alt=""><%= comment.name%></p>
				<%end%>
			 <p class="dates"> <%= comment.updated_at.strftime("%H:%M | %d %h %y") %></p>
			   <div class="clear"></div>
                <p class="textnew" style="text-align: justify !important;"><%= raw (comment.modified_comment ? comment.modified_comment : comment.title) %> </p>
                </div>
	  			</div>
<% end %>
