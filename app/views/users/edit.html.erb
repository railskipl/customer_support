<%= form_for(@user) do |f|%>
	<% if @user.present? && @user.errors.any? %>
		<div class="fom_con" style="color:red;">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
			<ul>
			<% @user.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
    <div class="profile-box1">
        <div class="row-profile">
            <div class="login-field-box3 row-left">
              <div class="text-box3">First Name *</div>
              <%= f.text_field :first_name, required: true, "maxlength"=>"35", "min" => "1","max" => "35" ,:class => "field3" %>
            </div>
            <div class="login-field-box3 row-right">
              <div class="text-box3">Last Name *</div>
              <%= f.text_field :last_name, required: true, "maxlength"=>"35", "min" => "1","max" => "35",:class => "field3" %>
            </div>
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
              <div class="text-box3">Preferred Alias *</div>
              <%= f.text_field :preferred_alias,:disabled=>true ,"maxlength"=>"20", "min" => "1","max" => "20","id" =>"user_alias",:class => "field3" %>
            </div> 
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
              <div class="text-box3">Email *</div>
              <%= f.email_field :email, required: true , "maxlength"=>"70", "min" => "1","max" => "70", "autocomplete" => "off",:id=>"user_email", :disabled=>true, :class => "field3" %>
            </div>
            <div class="login-field-box3 row-right">
                <div class="text-box3">Confirm Email *</div>
                <%= f.email_field :email, required: true , "maxlength"=>"70", "min" => "1","max" => "70", "autocomplete" => "off",:id=>"user_email", :disabled=>true, :class => "field3" %>
            </div>
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
              <div class="text-box3">Password *</div>
              <%= f.password_field :password , "maxlength"=>"8", "min" => "4","max" => "8",:id=>"password1",:class => "field3" %>
            </div>
            <div class="login-field-box3 row-right">
              <div class="text-box3">Confirm Password *</div>
              <%= f.password_field :password_confirmation , "maxlength"=>"8", "min" => "4","max" => "8",:id=>"password2",:class => "field3" %>
            </div>
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
            <div class="text-box3">Gender *</div>
               <%= f.select :gender, [["Female", 2],["Male", 1]],{:prompt => "Select Gender"},:class => "field3 select_box_custom" %>
            </div>  
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
            <div class="text-box3">Age *</div>
              <%= f.select :age, [["18-25", "18-25"],["26-35", "26-35"],["36-45", "36-45"],["46-55", "46-55"],["55+", "55+"]], {:prompt => "Select Age"},:required => true,:class=>"field1 select_box_custom"%>
              <%#=f.hidden_field :age, :class=>"user_age" %>
            </div>
            <div class="login-field-box3 row-right">
                <div class="text-box3">DOB</div>
                <%= f.text_field :dob ,:class => "field3",:id => "datepicker1" %>
            </div>
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
                <div class="text-box3">Address Line1 </div>
                <%= f.text_field :address_line1, "maxlength"=>"50", "min" => "1","max" => "50", :class => "field3" %>
            </div>
            <div class="login-field-box3 row-right">
                <div class="text-box3">Address Line2 </div>
                <%= f.text_field :address_line2,  "maxlength"=>"50", "min" => "1","max" => "50",:class => "field3" %>
            </div>
        </div>
        <div class="clear"></div>
        <div class="row-profile">
            <div class="login-field-box3 row-left">
                <div class="text-box3">Town</div>
                <%= f.text_field :town, "maxlength"=>"50", "min" => "1","max" => "50", :class => "field3" %>
            </div>
            <div class="login-field-box3 row-right">
                <div class="text-box3">Code</div>
                <%= f.text_field :postal_code , "maxlength"=>"50", "min" => "1","max" => "50", :class => "field3" %>
            </div>
        </div>
        <div class="clear"></div>
        <div class="row-profile">
