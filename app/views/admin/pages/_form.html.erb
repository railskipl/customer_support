<%= form_for([:admin,@page]) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>
      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name , "Head" %>
    <%= f.text_field :name, :readonly=>true %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title , required: true%>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description , :class => 'ckeditor' %>
  </div>

  <br/>
  <div class="field">
    <%= f.label :slug ,"Url" %>
    <%= f.text_field :slug %>
  </div>

  <div class="actions">
    <%= f.submit "Update" ,class: "btn btn-primary"%><br>
  </div>
 <%end%>
