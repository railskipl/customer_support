<h4>Poll Results</h4>
<%if params[:subaction] == "poll_vote" %>
  <strong>Displaying data for duration <%= params[:report][:start_date]%> to <%= params[:report][:end_date]%>
<%else%>
  <strong>Displaying data for 12 Months
<%end%>
<table id="poll_id" >
	<thead>
	  <tr>
	        <th>Sr. No. </th>
			<th width="10%">Title</th>
			<th width="15%">Option 1</th>
			<th width="10%">Option 2</th>
			<th width="15%">Option 3</th>
			<th width="15%">Option 4</th>
			
	  </tr>
	</thead>

	<tbody>
	  <% @polls.each_with_index.each do |poll,i| %>
	     <td><%= i+1%></td>
	     <td><%=poll.title rescue nil %></td>
	     <% poll.options.each do |option| %>
		  <td><%=option.answer rescue nil %>
		     <%@result = Result.where('option_id = ?',option.id).count%>
		     :&nbsp;<%= @result%>&nbsp;vote 
	     <% end %></td>
	  <% end %>
	</tbody>	
</table>