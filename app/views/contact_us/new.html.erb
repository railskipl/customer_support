<%content_for :left do%>
	<span class="span3">
	</span>
<%end%>

<div class="min-box">
	<%= form_for(@contact_u) do |f| %>
		<% if @contact_u.errors.any? %>
		  <div id="error_explanation">
		    <h2><%= pluralize(@contact_u.errors.count, "error") %> prohibited this contact from being send:</h2>

		    <ul>
		    <% @contact_u.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
		    </ul>
		  </div>
		<% end %>
        	<div class="login-box" style="min-height:135px;height:135px">
            	
                <div class="login-field-box">
                	<div class="text-box1">First Name*</div>
                    	<%= f.text_field :first_name, :value => "#{current_user.try(:first_name)}" ,:pattern => '[A-Za-z]+',"maxlength"=>"35", "min" => "1","max" => "35", :class => "field1" %>
                </div>
                <div class="clear"></div>
                <div class="login-field-box">
                	<div class="text-box1">Email*</div>
                  <%= f.email_field :email, :value => "#{current_user.try(:email)}",required: true, "maxlength"=>"35", "min" => "1","max" => "35" , :class => "field1"%>
                </div>
                <div class="clear"></div>
                
                <div class="login-field-box">
                	<div class="text-box1">Message Type*</div>
                   <%= f.select :message_type, [ ["How to improve our site", "How to improve our site"], [" Technical assistance", "Technical assistance"],["User registration" , "User registration"],["General enquiries", "General enquiries"],["Give us Feedback", "Give us Feedback"],["Report inappropriate content","Report inappropriate content"],["Other", "Other"] ], {},:onchange => 'CheckOther();', :class=> "field1", :style => "width:200px;"%>
				<input type="text" id="other_type" name="other_type" class="field1">
                </div>
            </div>
            <div class="register-box" style="min-height:135px;height:135px">
            	
                <div class="login-field-box">
                	<div class="text-box1">Last Name*</div>
                    <%= f.text_field :last_name, :value => "#{current_user.try(:last_name)}",:pattern => '[A-Za-z]+',"maxlength"=>"35", "min" => "1","max" => "35", :class => "field1" %>
                </div>
                
                <div class="clear"></div>
                
                 <div class="login-field-box">
                	<div class="text-box1">Telephone</div>
                      <%= f.text_field :telephone, :pattern => '[0-9]+',"maxlength"=>"10", "min" => "1","max" => "10", :class => "field1" %>
                </div>
                
                <div class="clear"></div>
                
                <div class="clear"></div>
                <div class="login-field-box2">
                    
                </div>
            </div>
            
             <div class="login-field-boxnew">
                	<div class="text-box1">Message*</div>
                	<%= f.text_area :message, :rows=>"5",:class =>"text-area4new fr-bt","maxlength"=>"1200"%>
                   
                   </div>
                  <div class="clear"></div><br/>
                  <div class="new-captcha">
                 <%= recaptcha_tags %><br/>
                 <%=f.submit "xema", :class=> "btn2 left-align" %>
                 </div> 
           <% end %>    
        </div>



<script type="text/javascript">
$( document ).ready(function() {
	$("#other_type").hide();
});

function CheckOther()
{
  if (document.getElementById("contact_u_message_type").value == "Other"){
        $("#other_type").show();
    }     
    else{
       $("#other_type").hide();
    }     
}

</script>