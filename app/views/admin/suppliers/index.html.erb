<h1>Suppliers</h1>

<table id="suppliers" style="width:100%" >
  <thead>
    <tr>
      <th width="10%">Supplier Company</th>
      <th width="10%">Industry</th>
      <th width="10%">Authorised Responder</th>
      <th width="10%">Email</th>
      <th width="10%">Mobile Number</th>
      <th width="10%">Subscription</th>
      <th width="10%">Start Date</th>
      <th width="10%">End Date</th>
      <th width="20%">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= link_to supplier.supplier_name, admin_supplier_path(supplier) %></td>
        <td><%= supplier.industry %></td>
        <td><%= supplier.authorised_responder %></td>
        <td><%= supplier.email %></td>
        <td><%= supplier.mobile_number %></td>
        <td><%= supplier.subscription %></td>
        <td><%= supplier.start_date %></td>
        <td><%= supplier.end_date %></td>

        <td><%= link_to 'Edit', edit_admin_supplier_path(supplier), class: "btn btn-primary" if can? :edit, Supplier%>
        <%= link_to 'Destroy', admin_supplier_path(supplier), class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Supplier%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_admin_supplier_path, class: "btn btn-primary" if can? :create, Supplier%>
